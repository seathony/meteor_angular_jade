div
  form
    label Task
    input(ng-model='newTask.name')
    label Description
    input(ng-model='newTask.description')
    button(ng-click="tasks.save(newTask); newTask='';") Add
    button(ng-click='removeAll()') Remove All
  ul
    li(ng-repeat='task in tasks')
      a(href='/tasks/{{task._id}}') {{task.name}}
      p {{task.description}}
      button(ng-click='remove(task)') X
